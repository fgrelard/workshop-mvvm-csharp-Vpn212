<Window xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CraftLR.Exercice5.HelloUI" Title="Hello you !">
    <StackPanel>
        <TextBlock>What is your name?</TextBlock>
        <TextBox Name="NameTB"></TextBox>
        <TextBlock Text="{Binding Text, ElementName=NameTB, StringFormat=Greetings {0}}"></TextBlock>
    </StackPanel>
</Window>